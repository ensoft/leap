#!/bin/bash

printf "Installing linux-tools... "
sudo apt-get -qq install linux-tools-generic linux-tools-common linux-tools-`uname -r`
printf "Done.\n"

printf "Changing sudoers file... "
echo 'Defaults env_keep += "PYTHONPATH"' | sudo EDITOR='tee -a' visudo
printf "Done.\n"

printf "Installing pip... "
# sudo python3 -mpip install -U pip
printf "Done.\n"

printf "Installing numpy, matplotlib... "
sudo apt-get -qq install python3-tk
sudo python3 -mpip install -U numpy matplotlib
printf "Done.\n"

printf "Installing IPython... "
sudo pip3 -qqq install ipython
printf "Done.\n"

printf "Installing pandas... "
sudo pip3 -qqq install pandas
printf "Done.\n"

